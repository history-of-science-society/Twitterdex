        <![endif]-->

    <div class="t-container">
        <header class="t-header">
            <h1>History of Science Society Twitterdex</h1>
            <p>A Crowd-Sourced Directory of <span id="num"></span> History of Science Twitterstorians</p>
            <a href="https://hssonline.formstack.com/forms/twitterdex" target="_blank" rel="noopener">Join or Update the
                Twitterdex</a>
        </header>

        <main class="t-main">

            {{#each authors}}
            <article class="t-entry">
                <header class="t-top">
                    <img class="t-image" src="./img/profile.jpg" alt="">
                    <div class="t-body">
                        <h2 class="t-name">{{name}}</h2>
                        <a class="t-affiliation" href="{{twitter}} target="_blank" rel="noopener">{{handle}}</a>
                    </div>
                </header>
                <footer class="t-footer">
                    <button class="t-button t-about">About</button>
                    <button class="t-button t-latest">Recent Tweet</button>
                    <a class="t-button t-follow" href="{{twitter}}" target="_blank" rel="no-opener">Follow</a>
                </footer>

                <div class="t-bio">
                    <p>{{bio}}</p>
                    <p>{{name}}</p>
                    <p><em>{{affiliation}}</em></p>
                </div>
            </article>
            {{/each}}

        </main>
    </div>
    <script src="./main.js" async defer></script>

</body>

</html>