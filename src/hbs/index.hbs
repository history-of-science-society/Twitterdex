    <main class="t-bg">
        <header class="t-header">
          <h1>History of Science Society Twitterdex</h1>
          <p>
            A Crowd-Sourced Directory of
            <span id="num" style="font-weight: 900;">{{ total }}</span> History
            of Science Twitterstorians
          </p>
        </header>
        <div class="t-main">
          {{#each authors}}
          <article
            id="{{ handleRaw }}"
            class="t-entry"
            data-id="{{ handleRaw }}"
          >
            <div class="t-circle-set">
              <div class="t-circle"></div>
              <div class="t-circle"></div>
            </div>
            <header class="t-top">
              <a
                aria-label="Twitter page of {{ name }}"
                class="t-image-link"
                href="{{ twitter }}"
                ><img class="t-image" src="{{ profile }}" alt=""
              /></a>

              <div class="t-body">
                <h2 class="t-name">{{ name }}</h2>
                <a
                  aria-label="Twitter page of {{ name }}"
                  class="t-handle"
                  href="{{ twitter }}"
                  ><img
                    src="https://digital.hssonline.org/wp-content/uploads/2019/08/twitter.svg"
                    alt=""
                  />
                  <p>{{ handle }}</p>
                </a>
              </div>
            </header>
            <footer class="t-footer">
              <button
                aria-controls="about-{{ handleRaw }}"
                class="t-button t-about"
              >
                About
              </button>
              <a class="t-button t-follow" href="{{ twitter }}">Follow</a>
            </footer>
            <div id="about-{{ handleRaw }}" class="t-bio">
              <button class="t-bio-close" aria-label="Close"></button>
              <p class="t-bio-name">{{ name }}</p>
              <p class="t-bio-affiliation">{{ affiliation }}</p>
              <p>{{ bio }}</p>
            </div>
          </article>
          {{/each}}
        </div>
    </main>
